<%= render 'shared/errors', obj: @customer %>

<div class="row">
	<div class="well col-md-8 col-md-offset-2">
		<%= form_for @customer do |f| %>   
		
		    <%= f.label :name %>
		    <%= f.text_field :customername %>
        
        <%= f.label :email %>
        <%= f.email_field :email %> 

        <%= f.label :password %>
        <%= f.password_field :password %>


        <%= f.submit(@customer.new_record? ? 'Register' : 'Edit Profile', class: "btn btn-success") %>
     <% end %>    
	</div>
</div>